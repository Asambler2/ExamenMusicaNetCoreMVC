@model IEnumerable<ExamenMusicaNetCoreMVC.Models.Concierto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["OrdenFecha"]">@Html.DisplayNameFor(model => model.Fecha)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["OrdenGenero"]">@Html.DisplayNameFor(model => model.Genero)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["OrdenLugar"]">@Html.DisplayNameFor(model => model.Lugar)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lugar)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
